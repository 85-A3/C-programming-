#include<stdio.h>
int main(){
    printf("1.Area and Perimeter of circle\n");
    printf("2.Area and Perimeter of square\n");
    printf("3.Area and Perimeter of Rectangle\n");
    int choice;
    float area,per,radius,sides,length,width;
    const float pi=3.1426;
    printf("Enter your choice :");
    scanf("%d",&choice);
    switch(choice){
        case1:
        printf("Enter radius:");
        scanf("%f",&radius);
        area=pi*radius*radius;
        per=2*pi*radius;
        printf("Area of circle\t\t%f\n",area);
        printf("Perimeter of circle\t%f\n",per);
        break;
        case2:
        printf("Enter sides of square:");
        scanf("%f",&sides);
        area= sides*sides;
        per=4*sides;
        printf("Area of square\t\t%f\n",area);
        printf("Perimeter of square\t%f\n",per);
        break;
        case3:
        printf("Enter length and width of rectangle:");
        scanf("%f%f",&length,&width);
        area=length*width;
        per=2*(length+width);
        printf("Perimeter of rectangle\t%f\n",per);
        printf("Area of rectangle\t\t%f\n",area);
        break;
        default:
        printf("Invalid Choice!!!!\n");
    }
    return 0;
}
