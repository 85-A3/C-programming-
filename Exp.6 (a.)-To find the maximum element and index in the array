#include<stdio.h>
int main(){
    int arr[100],n,i,max,index;
    printf("Enter size of array");
    scanf("%d",&n);
    printf("Enter % d elements:\n",n);
    for(i=0;i<n;i++)
    scanf( " % d",&arr[i]);
    max = arr[0];
    index = 0;
    for(i = 1; i<n;i++){
        if(arr[i]>max){
            max = arr[i];
            index = i;
        }
    }
    printf("Maximum element :%d at index %d\n",max,index);
    return 0;
}
